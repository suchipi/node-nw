{
  "name": "node-nw",
  "version": "0.7.1",
  "description": "Execute some node script in a headless nw.js instance",
  "main": "index.js",
  "bin": {
    "node-nw": "bin.js"
  },
  "scripts": {
    "test": "npm run test-files -- __tests__/**/*.js",
    "test-files": "littletest --concurrency 1 --setup-file __test_helpers__/setup.js",
    "cli": "env DEBUG='node-nw:*' node bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suchipi/node-nw.git"
  },
  "keywords": [
    "nw",
    "node-webkit"
  ],
  "author": "Lily Skye <me@suchipi.com> (http://suchipi.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suchipi/node-nw/issues"
  },
  "homepage": "https://github.com/suchipi/node-nw#readme",
  "dependencies": {
    "debug": "^4.4.3",
    "mkdirp": "^3.0.1",
    "pipe-wrench": "^1.0.0",
    "rimraf": "^6.0.1",
    "shell-escape": "^0.2.0",
    "supports-color": "^8.1.1",
    "yargs-parser": "^21.1.1"
  },
  "optionalDependencies": {
    "@nwjs-binaries/linux-ia32": "0.87.0-sdk",
    "@nwjs-binaries/linux-x64": "0.87.0-sdk",
    "@nwjs-binaries/osx-arm64": "0.87.0-sdk",
    "@nwjs-binaries/osx-x64": "0.87.0-sdk",
    "@nwjs-binaries/win-ia32": "0.87.0-sdk",
    "@nwjs-binaries/win-x64": "0.87.0-sdk"
  },
  "devDependencies": {
    "@littlethings/test": "^3.3.2",
    "eslint": "^8.57.0",
    "eslint-config-unobtrusive": "^1.2.5",
    "eslint-plugin-import": "^2.32.0",
    "expect": "^30.2.0",
    "first-base": "^1.5.2",
    "prettier": "^3.6.2",
    "strip-ansi": "^6.0.1"
  }
}
